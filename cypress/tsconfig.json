{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES6", "dom"],
    "types": ["node", "cypress", "cypress-file-upload", "./types"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "integration"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
